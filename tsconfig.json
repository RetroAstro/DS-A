{
   "compilerOptions": {
     "rootDirs": ["src", "tests"],
     "outDir": "dist",
     "target": "es5",
     "module": "commonjs",
     "lib": ["esnext"],
     "allowJs": false,
     "removeComments": true,
     "noImplicitAny": true,
     "noImplicitThis": true,
     "alwaysStrict": true,
     "noUnusedLocals": true,
     "noUnusedParameters": true,
     "noImplicitReturns": true
   },
   "include": ["src", "tests"],
   "exclude": ["dist", "node_modules"]
 }
